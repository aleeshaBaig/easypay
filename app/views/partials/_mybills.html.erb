 <style>
   .marg:{
    margin-bottom: 20px;
    margin-left: 84px; 
    background-color: #fc2cd4;
   }
 </style>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      
    </div>
    <div class="col-md-3">
      <button class="btn btn-dark marg" style="background-color:lightskyblue;margin-bottom:20px;margin-left:160px;">
      <%= link_to'Export to Excel',utility_bills_url(format: :csv) %>
      </button>
    </div>
    <div class="col-md-3">
      <button class="btn btn-dark marg" style="background-color:lightskyblue;margin-bottom:20px;margin-left: 6px;">
      <%= link_to'Add Utility', new_utility_bill_url %>
      </button>
      <br>
    </div>
  </div>
  <div class="row">
    <h2 style="background-color: cornflowerblue;"><%= link_to'Utilities',utility_bills_url %></h2>


 <table class="table table-striped table-bordered" style="width: -webkit-fill-available;">     
  <tr>   
    <th>Sr. #</th>
    <th>Consumer Id</th>
    <th>Customer Name</th>
    <th>Customer Id </th>
    <th>Category</th>   
    <th>Company</th>
    <th>Nickname</th>
    <th>Expected Reading Day</th>
    <th>Expected Issuance Day</th>
    <th>Expected Due Date</th> 
    <th>Focal Person</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @utility_bills.each_with_index do |utility_bill, index| %>
    <tr>
      <td><%= index +1 %></td>
      <td><a href="/utility_bills/<%= utility_bill.id %>"><%= utility_bill.consumer_id %></a></td>
      <td><%= utility_bill.customer_name %></td>
      <td><%= utility_bill.customer_id %><?td>
      <td><%= utility_bill.utility_bill_category.name %></td>
      <td><%= utility_bill.company.name%></td>
      <td><%= utility_bill.nickname%></td>
      <td><%= utility_bill.expected_reading_day %></td>
      <td><%= utility_bill.expected_issuance_day %></td>
      <td><%= utility_bill.expected_due_day %></td>
      <td><%= utility_bill.focal_person %><?td>
      <td><button  class="btn btn-info">
          <%= link_to "Edit", edit_utility_bill_path(utility_bill.id)  %> 
         </button>
      </td>  
      <td><button class="btn btn-danger">
         <%= link_to "Delete", utility_bill_path(utility_bill.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %> 
         </button>
      </td>          
     </tr> 
  <% end %>   
</table> 
    
  </div>

</div>
 