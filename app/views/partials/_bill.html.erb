<br>
<div class="row">
<div class="col-md-10">
<div class="pull-right range-query">
  <%= form_tag bills_path, method: :get do %>
  <%= date_field_tag 'search[date_from]' %>
  <%= date_field_tag 'search[date_to]' %>
  <%= submit_tag 'Search', class: 'btn search-button' %>
  <% end %>

</div>
</div>
<div class="col-md-2">
       <%= button_to'Add New Bill', new_bill_url, class:"text-gray-900 bg-gradient-to-r from-lime-200 via-lime-400 to-lime-500 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-lime-300 dark:focus:ring-lime-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2", :method => :get %>
 </div>
</div>
<table class="table table-striped table-bordered"  style="width: -webkit-fill-available;">   
  <tr>   
    <th >Sr. #</th>
    <th>Amount</th>   
    <th>Billing Month </th>
    <th>Late_Fee</th>   
    <th>Reading Date</th>
    <th>Issuance Date</th>
    <th>Due Date</th> 
    <th>Status</th>   
  </tr>
  <% @bills.each_with_index do |bill, index| %>
    <tr>
      <td><%= index +1 %></td>
       <td><a href="/bills/<%= bill.id %>"><%= bill.amount %></a></td>
      <td><%= bill.billing_month %></td>
      <td><%= bill.late_fee %></td>
      <td><%= bill.reading_date %></td>
      <td><%= bill.issuance_date %></td>
      <td><%= bill.due_date %></td>
      <td> 
 
      <% if (bill.status == "Unpaid") || (bill.status == "Pending") %>
       <button class="btn btn-danger"> 
        <%= link_to (bill.status), pay_bills_path(id:bill.id), data: {turbo_method: :post,turbo_confirm: "Are you sure?"} %>
       </button>
      <% else %>
      <button class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" >
      <%= link_to'Paid' , root_path %>
      </button>
           <%= link_to raw("<i class=\"material-icons\">delete</i>"), bill_path(bill.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %> 
      </button>
      <% end %>
      </td>
    </tr> 
  <% end %>   
</table> 
</div>
 