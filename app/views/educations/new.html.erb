<p style="color: green"><%= notice %></p>

<%= form_with model:@education do |form| %>
   
  <div>
   <%= form.label :title, style: "display: block" %>
   <%= form.text_field :title, class:"form-control" %>
   <% @education.errors.full_messages_for(:title).each do |message| %>
   <div style="color: red"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :major, style: "display: block" %>
    <%= form.text_field :major, class:"form-control"  %>
    <% @education.errors.full_messages_for(:major).each do |message| %>
      <div style="color: red"><%= message %></div>
       <% end %>
  </div>

  <div>
    <%= form.label :institute, style: "display: block" %>
    <%= form.text_field :institute, class:"form-control"  %>
    <% @education.errors.full_messages_for(:institute).each do |message| %>
      <div style="color: red"><%= message %></div>
       <% end %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.text_field :date, class:"form-control"  %>
    <% @education.errors.full_messages_for(:date).each do |message| %>
      <div style="color: red"><%= message %></div>
       <% end %>
  </div>
  <br>
  <div  class="form-group">
 	<%=form.hidden_field :user_id,  value:current_user.id %>
   </div>
   <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">	<%= form.submit %>

   </button>
<% end %>