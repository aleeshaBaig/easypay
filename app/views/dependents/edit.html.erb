         </div>
      </div>
      <div  class="col-md-3" >
         <!-- Email input -->
         <div class="form-outline">
            <%= form.label :cnic %><br>
            <%= form.text_field :cnic ,class:"form-control"%>
            <% @dependent.errors.full_messages_for(:cnic).each do |message| %>
            <div style="color: red"><%= message %></div>
