<br>
<div class="container">
   <%= form_with model: @dependent do |form| %>
   <!-- Gutter g-1 -->
   <div class="row g-1">
      <div class="col">
         <!-- Name input -->
         <div class="form-outline">
            <%= form.label :name %><br>
            <%= form.text_field :name,class:"form-control" %>
            <% @dependent.errors.full_messages_for(:name).each do |message| %>
            <div style="color: red"><%= message %></div>
            <% end %>
         </div>
      </div>
      <div class="col">
         <!-- Email input -->
         <div class="form-outline">
            <%= form.label :relation %><br>
            <%= form.text_field :relation ,class:"form-control"%>
            <% @dependent.errors.full_messages_for(:relation).each do |message| %>
            <div style="color: red"><%= message %></div>
            <% end %>
         </div>
      </div>
      <div class="col">
         <!-- Email input -->
         <div class="form-outline">
            <%= form.label :phone %><br>
            <%= form.text_field :phone ,class:"form-control"%>
            <% @dependent.errors.full_messages_for(:phone).each do |message| %>
            <div style="color: red"><%= message %></div>
            <% end %>
         </div>
      </div>
   </div>
   <!-- Gutter g-5 -->
   <div class="row g-5">
      <div class="col-md-3">
         <!-- Name input -->
         <div class="form-outline">
            <%= form.label :date_of_birth %><br>
            <%= form.text_field :date_of_birth ,class:"form-control"%>
            <% @dependent.errors.full_messages_for(:date_of_birth).each do |message| %>
            <div style="color: red"><%= message %></div>
            <% end %>
         </div>
      </div>
      <div class="col-md-3" >
         <!-- Email input -->
         <div class="form-outline">
            <%= form.label :address %><br>
            <%= form.text_field :address,class:"form-control" %>
            <% @dependent.errors.full_messages_for(:address).each do |message| %>
            <div style="color: red"><%= message %></div>
