<style>
body {
 text-align: left;
}
.main-body {
padding: 15px;
}
.card {
box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
}
.card {
position: relative;
display: flex;
flex-direction: column;
min-width: 0;
word-wrap: break-word;
background-color: #fff;
background-clip: border-box;
border: 0 solid rgba(0, 0, 0, .125);
border-radius: .25rem;
}
.a {
color: white;
}
.card-body {
flex: 1 1 auto;
min-height: 1px;
padding: 1rem;
}
.gutters-sm {
margin-right: -8px;
margin-left: -8px;
}
.gutters-sm>.col,
.gutters-sm>[class*=col-] {
padding-right: 8px;
padding-left: 8px;
}
.mb-3,
.my-3 {
margin-bottom: 1rem!important;
}
.bg-gray-300 {
background-color: '#e2e8f0';
}
.h-100 {
height: 100%!important;
}
.shadow-none {
box-shadow: none!important;
}
.style_image {
   height: 198px;
   margin-left: 84px;
}
.headingtable{
   background-color:"#f9f7f7";
    height:50px;
    font-size: 27px;
    color: grey;
 }
 .px-5 {
    padding-right: 1rem!important;
    padding-left: 1rem!important;
}
</style>
<div class="container">
<div class="main-body">
<div class="row gutters-sm">
<div class="col-md-3 mb-3">
<div class="card">
   <div class="card-body">
      <% if @personal_information.present? %>
      <%= image_tag @personal_information.image.url, :class => "style_image rounded" %>
      <% else %>
      <img src="https://thumbs.dreamstime.com/b/default-avatar-photo-placeholder-profile-icon-eps-file-easy-to-edit-default-avatar-photo-placeholder-profile-icon-124557887.jpg" class="style_image">
      <% end %>
      <hr>
      <br>
      <div class="row">
         <div class="col-md-4">
         </div>
         <div class="col-md-4">
            <%  if PersonalInformation.exists?(user_id: current_user.id) %>
             <%= button_to "Edit", edit_personal_information_path(@personal_information.id),  class:"text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2", :method => :get%>
            
             <% else %>
             <%= link_to "New ", new_personal_information_path, class:"text-gray-900 bg-gradient-to-r from-lime-200 via-lime-400 to-lime-500 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-lime-300 dark:focus:ring-lime-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2", :method => :get%>
             <% end %>
         </div>
         <div class="col-md-4">
         </div>
      </div>
      <br>
      <div class="d-flex flex-column align-items-center text-center">
         <div class="mt-3">
            <% if @personal_information.present? %>
            <h4 class="text-sky-500 dark:text-sky-400"> <%= @personal_information.first_name %></h4>
            <span><%= @personal_information.designation %></span>
            <% else %>
            Enter your Details
            <% end %>
         </div>
      </div>
   </div>
</div>
<div class="card mt-3">
   <ul class="list-group list-group-flush">
      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
         <h6 class="mb-0">Employee Code</h6>
         <span class="text-secondary"> 
         <% if @personal_information.present? %>
         <%=  @personal_information.employee_code %>
         <% else %>
         Enter your Employee Code
         <% end %>
         </span> 
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
         <h6 class="mb-0">Project</h6>
         <span class="text-secondary">
         <% if @personal_information.present? %>
         <%= @personal_information.project %>
         <% else %>
         Enter your Project
         <% end %>
         </span> 
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
         <h6 class="mb-0">Department</h6>
         <span class="text-secondary">
         <% if @personal_information.present? %>
         <%= @personal_information.department %>
         <% else %>
         Enter your Departemnt
         <% end %>
         </span> 
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
         <h6 class="mb-0">Employment Type</h6>
         <span class="text-secondary">
         <% if @personal_information.present? %>
         <%= @personal_information.employment_type %>
         <% else %>
         Enter your Employment Type 
         <% end %>
         </span> 
      </li>
   </ul>
</div>
</div>
<div class="col-md-9">
<div class="card mb-3" style="width: 1244px;">

<div class="row gutters-sm">
<div class="row">
            <div class="col-md-10">
            </div>
            <div class="col-md-2">
             <%= button_to 'Add New',new_emergency_contact_path, class:" focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800", :method => :get %>
             </div>
            </div>
</div>
   <div class="col-sm-12 mb-3">
      <div class="card h-100">
         <div class="card-body">
            <h2 class="headingtable">Emergency Contact Details </h2>
            
                    
            <div class="col-md-12">
   
            <table class="table">
               <thead>
                  <tr>
                     <th scope="col">#</th>
                     <th scope="col">Name</th>
                     <th scope="col">Relation</th>
                     <th scope="col">Contact</th>
                     <th scope="col">Residence Address</th>
                     <th scope="col"> Permanent Address</th>
                     <th scope="col">Action </th>
                  </tr>
               </thead>
               <% @emergency_contacts.each_with_index do |emergency_contact, index | %>
               <tbody>
                  <tr>
                     <th scope="row">
                        <%= index +1 %>
                     </th>
                     <td>
                        <%= emergency_contact.emergency_contact_name %>
                     </td>
                     <td>
                        <%= emergency_contact.emergency_contact_relation %>
                     </td>
                     <td>
                        <%= emergency_contact.emergency_contact_mobile %>
                     </td>
                     <td>
                        <%= emergency_contact.residence_address %>
                     </td>
                     <td>
                        <%= emergency_contact.permanent_address %>
                     </td>
                     <td colspan="3">
                     <%= link_to raw("<i class=\"material-icons\">edit</i>"),  edit_emergency_contact_path(emergency_contact.id)%>

 
                       
                         <%= link_to raw("<i class=\"material-icons\">delete</i>"), emergency_contact_path(emergency_contact.id), data: {
                           turbo_method: :delete,
                           turbo_confirm: "Are you sure?"
                           } %>
                      </td>
                  </tr>
               </tbody>
               <% end %>
            </table>
         </div>
      </div>
   </div>
</div>
<div class="col-md-12">
 <div class="row">
 <div class="col-md-10">
 </div>
 <div class="col-md-2">
 <button >
   <%= link_to 'Add new ',new_dependent_path, class:" focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800", :method => :get%>
   </button>
 </div>
 </div>
   <br>
   <h1  class="headingtable">Dependent</h1>
   <table class="table">
      <thead>
         <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Relation</th>
            <th scope="col">Phone</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Address</th>
            <th scope="col">CNIC </th>
            <th scope="col">Nationality </th>
            <th scope="col">Action </th>
         </tr>
      </thead>
      <% @dependents.each_with_index do |dependent, index | %>
      <tbody>
         <tr>
            <th scope="row">
               <%= index +1 %>
            </th>
            <td>
               <%= dependent.name %>
            </td>
            <td>
               <%= dependent.relation %>
            </td>
            <td>
               <%= dependent.phone %>
            </td>
            <td>
               <%= dependent.date_of_birth %>
            </td>
            <td>
               <%= dependent.address %>
            </td>
            <td>
               <%= dependent.cnic %>
            </td>
            <td>
               <%= dependent.nationality %>
            </td>
            <td colspan="3"><%= link_to raw("<i class=\"material-icons\">edit</i>"),  edit_dependent_path(dependent.id)%>

 
                
                <%= link_to raw("<i class=\"material-icons\">delete</i>"), dependent_path(dependent.id), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                  } %>
             </td>
         </tr>
      </tbody>
      <% end %>
   </table>
</div>
</div>