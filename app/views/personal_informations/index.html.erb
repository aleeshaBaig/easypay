<style>
body{
background: #f7f7ff;
margin-top:20px;
}
.card {
position: relative;
display: flex;
flex-direction: column;
min-width: 0;
word-wrap: break-word;
background-color: #fff;
background-clip: border-box;
border: 0 solid transparent;
border-radius: .25rem;
margin-bottom: 1.5rem;
box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
}
.me-2 {
margin-right: .5rem!important;
}
.style_image {
border-right: 1px solid #000;
height: 153px;
}
</style>
<div class="container">
<div class="main-body">
   <div class="row">
      <div class="col-lg-4">
         <div class="card">
            <div class="card-body">
               <div class="d-flex flex-column align-items-center text-center">
                  <% @personal_information.each do |personal_information| %>
                  <%= image_tag personal_information.image.url, :class => "style_image"%>
                  <% end %>
                  <div class="mt-3">
                     <% @personal_information.each do |personal_information| %>
                     <h4> <%= link_to personal_information.first_name, personal_information %></h4>
                     <%= link_to "New ", new_personal_information_path %><br>
                     <%= link_to "Edit", edit_personal_information_path(@personal_information.ids) %>
                  </div>
               </div>
               <hr class="my-4">
               <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                     <h6 class="mb-0">Designation</h6>
                     <span class="text-secondary"><%= personal_information.designation %></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                     <h6 class="mb-0">Project</h6>
                     <span class="text-secondary"><%= personal_information.project %></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                     <h6 class="mb-0">Deparment</h6>
                     <span class="text-secondary"><%= personal_information.department %></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                     <h6 class="mb-0">Employee Code</h6>
                     <span class="text-secondary"><%= personal_information.employee_code %></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                     <h6 class="mb-0">Employment Type</h6>
                     <span class="text-secondary"><%= personal_information.employment_type %></span>
                  </li>
               </ul>
            </div>
         </div>
      </div>
      <div class="col-lg-8">
         <div class="card">
            <div class="card-body">
               <div class="row mb-3">
                  <div class="col-sm-3">
                     <h6 class="mb-0">Date of joining</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                     <%= personal_information.date_of_joining %>
                     <% end %>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-sm-3">
                     <h6 class="mb-0">Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                     <% @contact_informations.each do |contact_information| %>
                     <%= contact_information.personal_email %>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-sm-3">
                     <h6 class="mb-0">Offical Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                     <%= contact_information.email_offical %>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-sm-3">
                     <h6 class="mb-0">Mobile</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                     <%= contact_information.mobile %>
                  </div>
               </div>
               <div class="row mb-3">
                  <div class="col-sm-3">
                     <h6 class="mb-0">Coordinator</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                     <%= contact_information.coordinator %>
                  </div>
               </div>
               <% end %>
            </div>
         </div>
         <div class="row">
            <div class="col-sm-12">
               <div class="card">
                  <div class="card-body">
                     <h5 class="d-flex align-items-center mb-3">Emergency Contact Information</h5>
                     <div class="container">
                        <div class="row">
                           <div class="col-md-6"></div>
                           <div class="col-md-4"></div>
                           <div class="col-md-2">
                              <%= link_to 'New', new_emergency_contact_path %> 
                           </div>
                        </div>
                     </div>
                     <% @emergency_contacts.each do |emergency_contact| %>
                     <span  class="mb-0">Name:</span> <%= emergency_contact.emergency_contact_name %><br>
                     <span  class="mb-0">Relation:</span> <%= emergency_contact.emergency_contact_relation %><br>
                     <span  class="mb-0">Mobile:</span> <%= emergency_contact.emergency_contact_mobile %><br>
                     <span  class="mb-0">Residence Address:</span> <%= emergency_contact.residence_address %><br>
                     <span  class="mb-0">Permanent Address:</span> <%= emergency_contact.permanent_address %>
                     <% end %>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
</div>
<div class="row">
<div class="col-sm-12">
   <div class="card">
      <div class="card-body">
         <button class="btn btn-dark"><%= link_to 'Add new record',new_dependent_path %></button>
         <h5 class="d-flex align-items-center mb-3">Dependent</h5>
         <table class="table">
            <thead>
               <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Relation</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Date of Birth</th>
                  <th scope="col">Address</th>
                  <th scope="col">CNIC </th>
                  <th scope="col">Nationality </th>
                  <th scope="col">Action </th>
               </tr>
            </thead>
            <% @dependents.each_with_index do |dependent, index | %>
            <tbody>
               <tr>
                  <th scope="row"><%= index +1 %></th>
                  <td><%= dependent.name %></td>
                  <td><%= dependent.relation %></td>
                  <td><%= dependent.phone %></td>
                  <td><%= dependent.date_of_birth %></td>
                  <td><%= dependent.address %></td>
                  <td><%= dependent.cnic %></td>
                  <td><%= dependent.nationality %></td>
                  <td><button  class="btn btn-info">
                     <%= link_to "Edit", edit_dependent_path(dependent.id)  %> 
                     </button>
                     <button class="btn btn-danger">
                     <%= link_to "Delete", dependent_path(dependent.id), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        } %> 
                     </button>
                  </td>
               </tr>
            </tbody>
            <% end %>
         </table>
      </div>
   </div>
</div>
</div>