<div class="container">
<%= form_with model:@bill do |form| %>
<div class="form-group mb-3">
	<%= form.label :amount %>
	<%= form.text_field :amount,class:"form-control"%>
</div>
<div class="form-group">
	<%= form.label :late_fee %>
	<%= form.text_field :late_fee,class:"form-control"%>
</div>
<div class="form-group">
	<%= form.label :billing_month %>
	<%= form.text_field :billing_month,class:"form-control"%>
</div>
 
 <div class="form-group">
	<%= form.label :reading_date %>
	<%= form.date_select  :reading_date, class:"form-control"%>
</div>
<div class="form-group">
	<%= form.label :issuance_date %>
	<%= form.date_select :issuance_date, class:"form-control" %>
</div>
<div class="form-group">
	<%= form.label :due_date %>
	<%= form.date_select :due_date,class:"form-control" %>
</div>
<div class="form-group">
<%= form.select :status, options_for_select(Bill.statuses.keys), class:"form-control" %>
</div>
<div class="form-group">
 	<%= form.hidden_field :user_id, value:current_user.id %>
</div>
<div class="form-group">
<%= form.label :utility_bill_id %>
<%= form.collection_select :utility_bill_id, UtilityBill.all, :id, :nickname, {prompt: true}, class:"form-control" %>
</div>
<div class="form-group">
	<%= form.submit %>
</div> 
<% end %>
	
</div>
<%= link_to'Back to home', root_path %>
