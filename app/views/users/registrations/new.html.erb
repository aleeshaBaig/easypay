<style>
.labels{
  margin-bottom: 10px;
}
.loginlink{
  color: green;
  font-weight: bold;
  font-size: 18px;
}
.max-w-sm {
  max-width: 30rem;
}
.w-11 {
  width: 12.75rem;
}
h-8 {
  height: 3rem;
}
</style>
<div class="bg-grey-lighter min-h-screen flex flex-col">
<div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
<a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
<img class="w-11 h-8 mr-2"   src="https://www.easypayfinance.com/wp-content/uploads/2018/06/ep-one-tone-uo.png" alt="logo">
      
</a>
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
        <h1 class="mb-8 text-3xl text-center">Sign up</h1>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
        
          <div class="field">
            <%= f.label :email, class:"labels" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"block border border-grey-light w-full p-3 rounded mb-4"%>
          </div>
        
          <div class="field">
            <%= f.label :password , class:"labels"%>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",class:"block border border-grey-light w-full p-3 rounded mb-4" %>
          </div>
        
          <div class="field">
            <%= f.label :password_confirmation, class:"labels" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"block border border-grey-light w-full p-3 rounded mb-4"%>
          </div>
        
          <div class="actions">
           
          </div>
         
              
        
        <%= f.submit "Sign up", style:"width:416px;",class:"text-gray-900 bg-gradient-to-r from-lime-200 via-lime-400 to-lime-500 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-lime-300 dark:focus:ring-lime-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
         <% end %>
        <div class="text-center text-sm text-grey-dark mt-4">
        Already have an account ? 
        <%= link_to "Log in", new_session_path(resource_name), class:"loginlink" %><br />
            
          
        </div>
    </div>

   
</div>
</div>
 
 