<style>
.w-full {
  width: '165% !important';
}
</style>
<div id="<%= @contact_information %>">
<div class="container">
<div class="row">
<div class="col-md-2">
</div>
<div class="col-md-8">
<section id="contact">
<div class="container">
    <h3 class="text-center text-uppercase">Contact Information</h3>
     <div class="row">
      <div class="col-sm-12 col-md-6 col-lg-3 my-5">
        <div class="card border-0">
           <div class="card-body text-center">
             <i class="fa fa-phone fa-5x mb-3" aria-hidden="true"></i>
             <h4 class="text-uppercase mb-5">Mobile</h4>
             <p><%= contact_information.mobile%></p>
           </div>
         </div>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-3 my-5">
        <div class="card border-0">
           <div class="card-body text-center">
             <i class="fa fa-home fa-5x mb-3" aria-hidden="true"></i>
             <h4 class="text-uppercase mb-5">Residence Phone</h4>
             <p><%= contact_information.residence_phone%></p>
           </div>
         </div>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-3 my-5">
        <div class="card border-0">
           <div class="card-body text-center">
             <i class="fa fa-user fa-5x mb-3" aria-hidden="true"></i>
             <h4 class="text-uppercase mb-5">Coordinator</h4>
             <p><%= contact_information.coordinator %></p>
             </div>
         </div>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-3 my-5">
      <div class="card border-0">
         <div class="card-body text-center">
           <i class="fa fa-globe fa-5x mb-3" aria-hidden="true"></i>
           <h4 class="text-uppercase mb-5">Official Email</h4>
           <p><%= contact_information.email_offical %></p>
         </div>
       </div>
    </div>
      <div class="col-sm-12 col-md-6 col-lg-3 my-5">
        <div class="card border-0">
           <div class="card-body text-center">
             <i class="fa fa-globe fa-5x mb-3" aria-hidden="true"></i>
             <h4 class="text-uppercase mb-5">Personal Email</h4>
             <p><%= contact_information.personal_email %></p>
           </div>
         </div>
      </div>
    </div>
</div>
</section>
</div>
<div class="col-md-2">
<%= link_to raw("<i class=\"material-icons\">edit</i>"), edit_contact_information_path(contact_information.id) %> 
</div>
</div>
</div>
  


</div>

