 

<div class="container">
  <%= form_with(model: contact_information) do |form| %>

    <div class="row g-2">
     <div class="col">
      <%= form.label :mobile, style: "display: block" %>
      <%= form.text_field :mobile, class:"form-control" %>
      	<% @contact_information.errors.full_messages_for(:mobile).each do |message| %>
				<div style="color: red"><%= message%></div>
				<% end %>
    </div>
     <div class="col">
    <%= form.label :residence_phone, style: "display: block" %>
    <%= form.text_field :residence_phone, class:"form-control" %>
    	<% @contact_information.errors.full_messages_for(:residence_phone).each do |message| %>
				<div style="color: red"><%= message%></div>
				<% end %>
  </div>
  </div>
  <div class="row g-2">
  <div class="col">
   <%= form.label :coordinator, style: "display: block" %>
    <%= form.text_field :coordinator, class:"form-control" %>
    	<% @contact_information.errors.full_messages_for(:coordinator).each do |message| %>
				<div style="color: red"><%= message%></div>
				<% end %>
  </div>
   <div class="col">
    <%= form.label :personal_email, style: "display: block" %>
    <%= form.text_field :personal_email, class:"form-control" %>
    	<% @contact_information.errors.full_messages_for(:personal_email).each do |message| %>
				<div style="color: red"><%= message%></div>
				<% end %>
  </div>
  </div>
  <div class="row g-2">
  <div class="col">
  <%= form.label :email_offical, style: "display: block" %>
    <%= form.text_field :email_offical, class:"form-control" %>
    	<% @contact_information.errors.full_messages_for(:email_offical).each do |message| %>
				<div style="color: red"><%= message%></div>
				<% end %>
  </div>
   <div class="col">
   <br>
     <button type="button" class=" text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">	<%= form.submit %>

  </button>
  </div>
  </div>
   <div  class="form-group">
 	<%=form.hidden_field :user_id,  value:current_user.id %>
   </div>
<% end %>
</div>