  
 
<br>
<div class="container">
<%= form_with model:@emergency_contact do |form| %>
  <!-- Gutter g-1 -->
   <div class="row g-1">
      <div class="col">
         <!-- Name input -->
         <div class="form-outline">
            <%= form.label :emergency_contact_name, style: "display: block" %>
    <%= form.text_field :emergency_contact_name ,class:"form-control"%>
    <% @emergency_contact.errors.full_messages_for(:emergency_contact_name).each do |message| %>
      <div style="color: red"><%= message %></div>
       <% end %>
         </div>
      </div>
      <div class="col">
         <!-- Email input -->
         <div class="form-outline">
           <%= form.label :emergency_contact_relation, style: "display: block" %>
    <%= form.text_field :emergency_contact_relation,class:"form-control" %>
    <% @emergency_contact.errors.full_messages_for(:emergency_contact_relation).each do |message| %>
      <div style="color: red"><%= message %></div>
       <% end %>
         </div>
      </div>
      <div class="col">
         <!-- Email input -->
         <div class="form-outline">
            <%= form.label :emergency_contact_mobile, style: "display: block" %>
    <%= form.text_field :emergency_contact_mobile ,class:"form-control"%>
    <% @emergency_contact.errors.full_messages_for(:emergency_contact_mobile).each do |message| %>
      <div style="color: red"><%= message %></div>
       <% end %>
         </div>
      </div>
   </div>
   <!-- Gutter g-5 -->
   <div class="row g-5">
      <div class="col">
         <!-- Name input -->
         <div class="form-outline">
               <%= form.label :residence_address, style: "display: block" %>
    <%= form.text_field :residence_address ,class:"form-control"%>
    <% @emergency_contact.errors.full_messages_for(:residence_address).each do |message| %>
      <div style="color: red"><%= message %></div>
       <% end %>
         </div>
      </div>
      <div class="col" >
         <!-- Email input -->
         <div class="form-outline">
        <%= form.label :permanent_address, style: "display: block" %>
    <%= form.text_field :permanent_address ,class:"form-control" %>
    <% @emergency_contact.errors.full_messages_for(:permanent_address).each do |message| %>
      <div style="color: red"><%= message %></div>
       <% end %>
         </div>
      </div>
      
   
   </div>
   <div  class="form-group">
      <%=form.hidden_field :user_id,  value:current_user.id %>
   </div>
   <br>
   <div class="row">
      <div class="col-md-5"></div>
      <div class="col-md-7">
         <button type="button" class=" text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">	<%= form.submit %>
         </button>
      </div>
   </div>
   <% end %>
</div>